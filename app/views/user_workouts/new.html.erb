				<%= current_user.last_workout_of_exercise(uw.exercise_id) %>
				<%= @weight %>
				</a> <!-- link for accordion header -->

				
			</div> <!-- Accordion Heading -->
					<div id="collapse<%= numbers[n] %>" class="accordion-body collapse">
	                	<div class="accordion-inner">

								<div class="row-fluid">
									<div class="span10">

										<br/>
										<div class="row-fluid">
										<form name ="setsForm">
										<table>
											<tbody>
												<tr>
												<td><input id="set<%= n*5+1%>" name="set1" type="number" data-group="<%= n %>exercise_<%= uw.exercise_id %>"class='calc-avg' style ="width: 75%" ></td>
												<td><input id="set<%= n*5+2%>" name="set2" type="number" data-group="<%= n %>exercise_<%= uw.exercise_id %>" class='calc-avg' style ="width: 75%"></td>
												<td><input id="set<%= n*5+3%>" name="set3" type="number" data-group="<%= n %>exercise_<%= uw.exercise_id %>" class='calc-avg' style ="width: 75%"></td>
												<td><input id="set<%= n*5+4%>" name="set4" type="number" data-group="<%= n %>exercise_<%= uw.exercise_id %>" class='calc-avg' style ="width: 75%"></td>
												<td><input id="set<%= n*5+5%>" name="set5" type="number" data-group="<%= n %>exercise_<%= uw.exercise_id %>"class='calc-avg' style ="width: 75%"></td>
												</tr>
											</tbody>
										</table>
										<!-- <button class="btn-large" onClick="calculateAverage(this.form); return false;">Link</button> -->
										</form>
										</div> <!--Fluid Row-->
								 	</div> <!-- span 10 div -->


						</div> <!-- Accordion inner -->
					</div> <!-- Accordion Body created by the crazy-ass string thing up there -->

		</div> <!-- accordion group -->
	<% end %>
</div> <!-- accordion div -->
	<br/>
	<%= submit_tag %>
<% end %>
	


